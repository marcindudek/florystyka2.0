<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.3.xsd">

    <var name="solution" class="io.dudek.florystyka.domain.SolutionDTO"/>

    <view-state id="question" view="test" model="solution" >
        <transition on="checkAnswer" to="check"/>
    </view-state>

    <view-state id="check" model="requestParameters.solution">

        <transition to="testSolved" />
    </view-state>

    <end-state id="testSolved" view="test_result" />
</flow>